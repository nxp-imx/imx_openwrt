+
+			/* switch A35 from frosc to spll2 */
+			ret = clk_set_parent(a35_sel, a35_old_parent);
+			if (ret)
+				pr_err("failed to change a35 clock parent back:%d\n", ret);
+		}
+
+		/*
+		 * scaling down the ddr frequency and change the BUCK3
