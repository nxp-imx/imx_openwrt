+			ret = clk_set_parent(nic_sel, nic_old_parent);
+			if (ret)
+				pr_err("failed to change nic clock parent:%d\n", ret);
+
+			/* scaling up lpav axi frequency */
+			ret = clk_set_parent(lpav_axi_sel, lpav_old_parent);
+			if (ret)
