+static int scaling_dram_freq(unsigned int fsp_index)
+{
+	struct arm_smccc_res res;
+	u32 num_cpus = num_online_cpus();
+
+	local_irq_disable();
+
+	/* need to check the return value ?*/ 
+	arm_smccc_smc(FSL_SIP_DDR_DVFS, fsp_index, num_cpus,
