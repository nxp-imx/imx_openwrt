+#define DEVICE_ID		0x800
+#define DIGPROG_MAJOR_UPPER(x)	(((x) & 0x00f00000) >> 20)
+#define DIGPROG_MAJOR_LOWER(x)	(((x) & 0x0000f000) >> 12)
+#define BASE_LAYER_REV(x)	(((x) & 0x000000f0) >> 4)
