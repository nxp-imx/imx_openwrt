+	int ret = 0;
+	bool not_random = false;
+	u8 trusted_key, key_enc;
+	u32 *desc = NULL;
+	size_t black_key_length_req = 0;
+	dma_addr_t black_key_dma;
+	u8 *tmp_black_key = NULL;
