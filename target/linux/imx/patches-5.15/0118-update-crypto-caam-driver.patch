+static dma_addr_t get_caam_dma_addr(const void *phy_address)
+{
+	uintptr_t ptr_conv;
+	dma_addr_t caam_dma_address = 0;
+
+	/* Check if conversion is possible */
+	if (sizeof(caam_dma_address) < sizeof(phy_address)) {
+		/*
